// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



// 1. Account (Tài Khoản)
model Account {
  id           String    @id // Format: TK_01, TK_02...
  username     String    @unique
  passwordHash String
  email        String?
  role         String    @default("admin")
  active       Boolean   @default(true)
  lastLogin    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

// 2. Location (Khu Vực / Địa Điểm)
model Location {
  id          String   @id // Format: KV_01, KV_02...
  name        String
  type        String
  area        String?
  address     String?
  lat         Float?
  lng         Float?
  ticket      Float?
  indoor      Boolean  @default(false)
  priceLevel  String?
  tags        String?  // Stored as JSON string or comma-separated
  description String?
  menu        String?  // Stored as JSON string for dish prices
  suggestedDuration Int?
  openTime    String?  // e.g., "08:00"
  closeTime   String?  // e.g., "22:00"
  visitType   String?  // e.g., "beach", "museum-culture"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 3. KnowledgeBase (Kiến Thức / KB)
model KnowledgeBase {
  id        String   @id // Format: KB_01, KB_02...
  question  String
  answer    String
  keywords  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 4. AccessLog (Truy Cập)
model AccessLog {
  id        String   @id // Format: TC_01, TC_02...
  ip        String
  userAgent String?
  endpoint  String
  method    String
  username  String?  // Null if guest
  role      String?  // 'admin', 'user', or null
  timestamp DateTime @default(now())
}

// 5. SearchQuery (Xu Hướng / Tìm kiếm)
model SearchQuery {
  id        String   @id // Format: XH_01, XH_02...
  tags      String   // JSON string of selected tags
  duration  String?  // e.g., "1 ngày", "2 ngày"
  budget    Float?
  people    Int?
  createdAt DateTime @default(now())
}



// 7. Transportation (Phương Tiện)
model Transportation {
  id          String   @id // Format: PT_01, PT_02...
  name        String   // e.g., "Grab Bike", "Xanh SM Taxi"
  type        String   // 'bike', 'car4', 'car7', 'taxi'
  basePrice   Float    // Giá mở cửa (0-2km đầu)
  pricePerKm  Float    // Giá mỗi km tiếp theo
  description String?  // Ghi chú (e.g., "Giá tăng giờ cao điểm")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 8. ErrorLog (Lỗi)
model ErrorLog {
  id        String   @id // Format: L_01, L_02...
  message   String
  stack     String?
  path      String?
  method    String?
  body      String?
  user      String?
  source    String   @default("BACKEND") // "BACKEND" or "FRONTEND"
  createdAt DateTime @default(now())
}


