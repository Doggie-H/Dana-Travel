// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  price       Float
  image       String?
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Menu {
  id        String   @id @default(uuid())
  name      String
  link      String
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id           String    @id @default(uuid())
  username     String    @unique
  passwordHash String
  email        String?
  role         String    @default("admin")
  active       Boolean   @default(true)
  lastLogin    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Location {
  id          String   @id @default(uuid())
  name        String
  type        String
  area        String?
  address     String?
  lat         Float?
  lng         Float?
  ticket      Float?
  indoor      Boolean  @default(false)
  priceLevel  String?
  tags        String?  // Stored as JSON string or comma-separated
  description String?
  menu        String?  // Stored as JSON string for dish prices
  suggestedDuration Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Knowledge {
  id        String   @id @default(uuid())
  question  String
  answer    String
  keywords  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatLog {
  id          String   @id @default(uuid())
  userMessage String
  botResponse String
  timestamp   DateTime @default(now())
}

model AccessLog {
  id        String   @id @default(uuid())
  ip        String
  userAgent String?
  endpoint  String
  method    String
  username  String?  // Null if guest
  role      String?  // 'admin', 'user', or null
  timestamp DateTime @default(now())
}

model SearchTrend {
  id        String   @id @default(uuid())
  tags      String   // JSON string of selected tags
  duration  String?  // e.g., "1 ngày", "2 ngày"
  budget    Float?
  people    Int?
  createdAt DateTime @default(now())
}
